<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_order"
    android:background="@color/white">

    <EditText
        android:id="@+id/order_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите адрес заказа"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/my_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Моё местоположение"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/order_address"
        />

    <TextView
        android:id="@+id/my_addresses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Мои адреса"
        android:textSize="23dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/my_location"/>

    <TextView
        android:id="@+id/my_first_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Профсоюзная 98к2"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/my_addresses"/>

    <TextView
        android:id="@+id/my_second_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Профсоюзная 95"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/my_first_address"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Далее"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_second_address"
        android:backgroundTint="@color/yellow"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/prev_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_second_address"
        android:backgroundTint="@color/yellow"/>



</androidx.constraintlayout.widget.ConstraintLayout>